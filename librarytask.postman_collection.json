							"\r",
							"pm.collectionVariables.set(\"NewISBNNumber\",ISBNNumber)\r",
							"pm.collectionVariables.set(\"NewAisleNumber\",AISLENumber*16)\r",
							"pm.collectionVariables.set(\"Auther\",FullName)"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
